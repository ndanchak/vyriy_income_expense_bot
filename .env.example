# Vyriy House Bot — Environment Variables
# Copy to .env and fill in real values

# Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_GROUP_CHAT_ID=your_group_chat_id
TELEGRAM_OWNER_CHAT_ID=nestors_personal_chat_id

# Database (local dev — Railway auto-sets DATABASE_URL in production)
DATABASE_URL=postgresql://localhost:5432/vyriy_dev

# Google Vision OCR (API key from console.cloud.google.com)
GOOGLE_VISION_API_KEY=your_vision_api_key

# Google Sheets (base64-encoded service account JSON)
GOOGLE_SHEETS_CREDS_JSON=base64_encoded_service_account_json
GOOGLE_SHEETS_ID=your_spreadsheet_id_from_url

# Google Drive (folder for receipt uploads)
GOOGLE_DRIVE_FOLDER_ID=your_drive_folder_id

# Webhook (ngrok URL for local dev, Railway URL for prod)
WEBHOOK_SECRET=generate_with_python_c_import_secrets_print_secrets_token_hex_32
WEBHOOK_URL=https://your-ngrok-or-railway-url
